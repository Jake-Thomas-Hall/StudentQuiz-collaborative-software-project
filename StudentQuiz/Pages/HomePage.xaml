<Page
    x:Class="StudentQuiz.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StudentQuiz.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >
    <StackPanel>
        <TextBlock Padding="0, 10, 0, 10" TextWrapping="WrapWholeWords" 
                   Grid.Row="1" 
                   Text="Welcome to the application. If you have a account then please click Login, else create a account through the sign up page. This application will test your knowleadge of a variety of topics in your chosen field of study."
                   Name="HomePageText"/>
        <TextBlock Padding="0, 10, 0, 10" TextWrapping="WrapWholeWords" 
                   Grid.Row="2" 
                   Text="Phone Number: 01934 411 411" 
                   Name="PhoneNumber"/>
        <TextBlock Padding="0, 10, 0, 10" TextWrapping="WrapWholeWords" 
                   Grid.Row="3" 
                   Text="Address: Weston College, Knightstone Campus, Knightstone Road, Weston-super-Mare, BS23 2AL" 
                   Name="Address"/>
    </StackPanel>
</Page>
